# Server
PORT=3000
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=info

# Database (Postgres)
DATABASE_URL=postgresql://scraper:scraper_dev@localhost:5432/lakeb2b_scraper

# Redis (for arq job queue)
REDIS_URL=redis://localhost:6379

# Authentication (REQUIRED)
# Generate JWT_SECRET with: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-use-openssl-rand-hex-32

# Proxy services
BRIGHTDATA_PROXY_URL=
SMARTPROXY_URL=

# LakeCurrent search API
LAKECURRENT_BASE_URL=http://lakecurrent-backend:8001
LAKECURRENT_TIMEOUT=15.0
LAKECURRENT_ENABLED=true

# Limits
MAX_CONCURRENT_JOBS=10
MAX_SCRAPE_PAGES_PER_JOB=500
DEFAULT_RATE_LIMIT_MS=1000
